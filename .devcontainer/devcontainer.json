{
    "image": "mcr.microsoft.com/devcontainers/python:3.8",
    "postCreateCommand": "sh .devcontainer/devcontainer_setup.sh",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}